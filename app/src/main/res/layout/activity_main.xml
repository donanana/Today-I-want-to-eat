<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">

        <Button
            android:id="@+id/top1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_weight="1"
            android:background="@drawable/top_left"
            android:enabled="false"
            android:text="食譜清單"
            android:textColor="#624019" />

        <Button
            android:id="@+id/top2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_weight="1"
            android:background="@drawable/top_right"
            android:enabled="true"
            android:text="比例計算機"
            android:textColor="#624019" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:paddingHorizontal="15dp"
        android:scrollbars="none"
        android:visibility="visible">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="0">

            <TableRow>

                <LinearLayout
                    android:id="@+id/item1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="17dp">
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="130dp"
                        android:src="@drawable/ball"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginVertical="10dp"
                        android:text="地瓜球"
                        android:textStyle="bold"
                        android:textSize="19sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="17dp">
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="130dp"
                        android:src="@drawable/cold"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginVertical="10dp"
                        android:text="涼糕"
                        android:textStyle="bold"
                        android:textSize="19sp"/>

                </LinearLayout>

            </TableRow>

            <TableRow>

                <LinearLayout
                    android:id="@+id/item3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="17dp">

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="130dp"
                        android:src="@drawable/soof"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginVertical="10dp"
                        android:text="舒芙雷"
                        android:textStyle="bold"
                        android:textSize="19sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="17dp">

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="130dp"
                        android:src="@drawable/milk"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginVertical="10dp"
                        android:text="牛奶麻糬"
                        android:textStyle="bold"
                        android:textSize="19sp"/>
                </LinearLayout>
            </TableRow>

            <TableRow>
                <LinearLayout
                    android:id="@+id/item5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="17dp">

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="130dp"
                        android:src="@drawable/qcookie"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginVertical="10dp"
                        android:text="雪Q餅"
                        android:textStyle="bold"
                        android:textSize="19sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item6"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="17dp">
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="130dp"
                        android:src="@drawable/pancakes"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginVertical="10dp"
                        android:text="美式鬆餅"
                        android:textStyle="bold"
                        android:textSize="19sp"/>

                </LinearLayout>


            </TableRow>

        </TableLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/sv2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:paddingHorizontal="30dp"
        android:scrollbars="none"
        android:visibility="invisible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="10dp">

            <TableLayout
                android:id="@+id/tl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="0">

                <TableRow
                    android:layout_marginVertical="10dp">

                    <EditText
                        android:id="@+id/i1ed1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:hint="請輸入材料名稱"
                        android:inputType="text"
                        android:text="材料1"
                        android:gravity="center_horizontal"/>


                    <EditText
                        android:id="@+id/i1ed2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:hint="請輸入公克數"
                        android:inputType="numberDecimal"
                        android:gravity="center_horizontal"/>
                </TableRow>

                <TableRow
                    android:layout_marginVertical="10dp">

                    <EditText
                        android:id="@+id/i2ed1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:hint="請輸入材料名稱"
                        android:inputType="text"
                        android:text="材料2"
                        android:gravity="center_horizontal"/>


                    <EditText
                        android:id="@+id/i2ed2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:hint="請輸入公克數"
                        android:inputType="numberDecimal"
                        android:gravity="center_horizontal"/>
                </TableRow>

                <TableRow
                    android:layout_marginVertical="10dp">

                    <EditText
                        android:id="@+id/i3ed1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:hint="請輸入材料名稱"
                        android:inputType="text"
                        android:text="材料3"
                        android:gravity="center_horizontal"/>


                    <EditText
                        android:id="@+id/i3ed2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:hint="請輸入公克數"
                        android:inputType="numberDecimal"
                        android:gravity="center_horizontal"/>
                </TableRow>

                <TableRow
                    android:layout_marginVertical="10dp">

                    <EditText
                        android:id="@+id/i4ed1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:hint="請輸入材料名稱"
                        android:inputType="text"
                        android:text="材料4"
                        android:gravity="center_horizontal"/>


                    <EditText
                        android:id="@+id/i4ed2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:hint="請輸入公克數"
                        android:inputType="numberDecimal"
                        android:gravity="center_horizontal"/>
                </TableRow>

                <TableRow
                    android:layout_marginVertical="10dp">

                    <EditText
                        android:id="@+id/i5ed1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:hint="請輸入材料名稱"
                        android:inputType="text"
                        android:text="材料5"
                        android:gravity="center_horizontal"/>


                    <EditText
                        android:id="@+id/i5ed2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:hint="請輸入公克數"
                        android:inputType="numberDecimal"
                        android:gravity="center_horizontal"/>
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/go"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/circle"
                android:layout_gravity="right|center_vertical"
                android:textColor="#986E3E"
                android:text="GO" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="5dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:src="@drawable/rabbit"/>

            <TextView
                android:padding="10dp"
                android:id="@+id/tv"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:textSize="20dp"
                android:text=""/>

            <ImageView
                android:layout_marginTop="150dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mouse"/>
        </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>